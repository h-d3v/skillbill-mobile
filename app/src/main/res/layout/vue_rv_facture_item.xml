<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvMontantConversion"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.google.android.material.button.MaterialButton
            android:id="@+id/nomActivite"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="229dp"
            android:layout_height="86dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/oswald"
            android:textAlignment="textStart"
            android:textSize="30sp"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" app:backgroundTint="#00FFFFFF"
            android:textColor="?android:attr/textColorPrimary"
            android:textEditNoPasteWindowLayout="?android:attr/textEditPasteWindowLayout"
            android:autoSizeTextType="uniform"
            android:textDirection="firstStrongLtr" android:textAllCaps="true"
            app:layout_constraintVertical_bias="0.45"/>

    <TextView
            android:id="@+id/tvMontant"
            android:layout_width="146dp"
            android:layout_height="75dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/oswald"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nomActivite"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.55"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tcMontantConvert"
            tools:layout_editor_absoluteY="70dp" app:layout_constraintStart_toEndOf="@+id/nomActivite"
            app:layout_constraintEnd_toEndOf="@+id/tvMontant"/>

</androidx.constraintlayout.widget.ConstraintLayout>